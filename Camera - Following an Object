#include <kipr/wombat.h>

int main()
 
   {
    int x, y;
    if(camera_open() == 1)
    {
    msleep(1000); //gives camera time to boot, older controllers may need 3000 
        while (a_button () == 0)
        {
            camera_update();
            
    if (get_object_count(0) > 0)    //there has to be an object in sight
     {
        if (get_object_center_x(0,0) < 300) // inside the parentheses channel 0, object 0 (the biggest one). If it's less than 300
            // move to the left. The grid dimensions are actually 640x480, the slide is in need of updating
        {
         motor(0, 25);
         motor(3, -25);
     }  
     else if  (get_object_center_x(0,0) > 420)  //if it's more than 420, move to the right.
     {
          motor(0, -25);
          motor(3, 25);
     }
}
 else
    {
        motor(0,75);
    	motor(3,75);   		
    }
   
    {
        
            printf("No objects found\n");
        }
    }
            camera_close();
    }

}
    
   

